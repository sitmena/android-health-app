    <dimen name="spacing_micro">2dp</dimen>

    <!-- Headline sizes -->
    <dimen name="text_size_headline_large">32sp</dimen>
    <dimen name="text_size_headline_medium">28sp</dimen>
    <dimen name="text_size_headline_small">24sp</dimen>
